        }

        .table-blue {
            background-color: #2874A6;
            font-size: 18px;
            text-align: center;
            opacity: 0.8;
            width: 100%;
            /*font-family: 'PT Sans Caption', sans-serif;*/
            color: #EEF4D5;
        }
        .center-button {
            display: flex;
            justify-content: center;
            padding-top: 20px;
        }
        .p-blue {
            background-color: #2874A6;
            font-size: 18px;
