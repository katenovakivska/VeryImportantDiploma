        }

        .form-blue {
            margin: auto;
            align-content: center;
            background-color: #2874A6;
            opacity: 0.8;
            width: 25%;
            border-radius: 15px;
        }
        .form-pink {
            margin: auto;
            align-content: center;
            background-color: #F2D7D5;
            opacity: 0.8;
            width: 25%;
            border-radius: 15px;
        }
        .form-blue-without {
            margin: auto;
            align-content: center;
            background-color: #2874A6;
            width: 25%;
            border-radius: 15px;
        }

        .simple {
            margin-left: 0;
            align-content: center;
            background-color: unset;
            opacity: 1;
            width: auto;
            border-radius: 0;
        }

        h3 {
            padding-top: 15px;
            text-align: center;
            /*font-family: 'PT Sans Caption', sans-serif;*/
            color: #EEF4D5;
            text-shadow: #FDFEFE 0 0 4px;
        }

        .container {
            padding-left: 200px;
            width: 600px;
            height: 500px;
            opacity: 0.8;
            background-color: #D4E6F1/*#FDEDEC*/;
            display: block;
        }
        div.container {
            overflow-y: auto;
        }
        .card {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
            max-width: 300px;
            min-width: 300px;
            margin: auto;
            padding-top: 20px;
        }
        /*.text {
            font-size: 18px;
            margin: auto;
            align-content: center;
            font-family: 'PT Sans Caption', sans-serif;
            color: #EEF4D5;
        }*/

        input[type=text], select {
            margin: auto;
            width: 50%;
        }

        input[type=email], select {
            margin: auto;
            width: 50%;
        }

        input[type=password], select {
            margin: auto;
            width: 50%;
        }

        input[type=checkbox], select {
            margin: auto;
            width: 15px;
            height: 15px;
        }

        input[type=number], select {
            margin: auto;
            width: 50%;
        }

        input[type=date], select {
            margin: auto;
            width: 50%;
        }

        .menu-main {
            margin: auto;
            margin-top: 0;
            list-style: none;
            padding-left: 0;
            font-size: 18px;
            text-align: center;
            position: relative;
            background-color: #2874A6;
            opacity: 0.8;
            width: 100%;
        }

            .menu-main li {
                display: inline-block;
            }

            .menu-main a {
                text-decoration: none;
                display: inline-block;
                margin: 0 15px;
                padding: 10px 30px;
                /*font-family: 'PT Sans Caption', sans-serif;*/
                color: #EEF4D5;
                transition: .3s linear;
                position: relative;
            }

                .menu-main a:before,
                .menu-main a:after {
                    content: "";
                    position: absolute;
                    top: calc(50% - 3px);
                    width: 6px;
                    height: 6px;
                    border-radius: 50%;
                    background: #EEF4D5;
                    opacity: 0;
                    transition: .5s ease-in-out;
                }

                .menu-main a:before {
                    left: 5px;
                }

                .menu-main a:after {
                    right: 5px;
                }

                .menu-main a.current:before,
                .menu-main a.current:after,
                .menu-main a:hover:before,
                .menu-main a:hover:after {
                    opacity: 1;
                }

                .menu-main a.current,
                .menu-main a:hover {
                    color: #EEF4D5;
                }
    </style>
</head>
